<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android1:paddingLeft="5dp"
	android1:paddingTop="5dp"
    android:orientation="vertical">

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:background="@color/grey"
        android1:paddingLeft="5dp"
        android1:paddingTop="5dp" >

        <EditText
            android1:id="@+id/search_text"
            android1:layout_width="0dp"
            android1:inputType="text"
            android1:layout_height="44dp"
            android1:layout_marginRight="10dp"
            android1:layout_weight="0.72"
            android1:ems="10"
            android:imeOptions="actionSearch" >

            <requestFocus />
        </EditText>

        <ImageButton
            android1:id="@+id/search_button"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_marginTop="5dp"
            android1:layout_marginRight="5dp"
            android1:contentDescription="@string/search"
            android1:background="@android:color/transparent"
            android1:src="@drawable/search_button" />
    </LinearLayout>

    <ListView
        android1:id="@+id/listView1"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >
    </ListView>

</LinearLayout>